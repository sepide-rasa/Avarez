@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@(Html.X().Window()
    .Modal(true)
         .Resizable(false)
                .Listeners(l => l.AfterLayout.Handler = "LoadCost()")
    .Width(300)
    //.Height(180)
    .Title("تعریف هزینه")
    .Layout(LayoutType.Fit)
            .ID("NewCost")
    .Closable(true)
    .ButtonAlign(Ext.Net.Alignment.Center)
    .Buttons(
        X.Button()
            .Text("ذخیره")
            .Icon(Ext.Net.Icon.Disk)
        //.ToolTip("کلید میانبر F8")
                    .Listeners(l => l.Click.Handler = "SaveCost();"),
        X.Button()
            .Text("خروج")
            .Icon(Ext.Net.Icon.DoorOut)
        //.ToolTip("کلید میانبر Esc")
                    .OnClientClick("App.NewCost.destroy();"))
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Items(
        X.FormPanel()
            .Border(false)
            .Layout(LayoutType.Fit)
            .Items(
                X.Panel()
                    .Border(false)
                    .PaddingSpec("15px 0 0 0")
                    .Layout(LayoutType.VBox)
                    .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Center })
                    .Items(
                        X.FieldSet()
                            .Border(true)
                            .Title(" هزینه")
                            .Height(120)
                            .Defaults(new { Margin = 2 })
                            .Layout(LayoutType.Table)
        //.Title("رنگ خودرو")
                            .LayoutConfig(new TableLayoutConfig { Columns = 2 })
                            .Items(
                                X.Hidden()
                                    .ItemID("fldId"),

                                X.Label("هزینه:"),
                                X.TextField()
                                            .ItemID("txtCost")
                                    .Width(190)
                                    .AllowBlank(false)
                                    .BlankText("لطفا هزینه را وارد نمایید.")
                                    .MsgTarget(Ext.Net.MessageTarget.Side),

                                X.Label("توضیحات:"),
                                X.TextArea()
                                    .ItemID("txtDesc")
                                    .Width(190)
                            )


                )
            )
        )
)

<script type="text/javascript">



    function LoadCost() {
        if ('@ViewBag.Id' != '0') {
            App.NewCost.body.mask("در حال بارگذاری...");
            Ext.net.DirectMethod.request({
                url: '/NewVer/Cost_New/Details',
                params: {
                    Id: '@ViewBag.Id'
                },
                success: function (data) {
                    if (data.Er == 0) {
                        var txtCost = App.NewCost.queryById('txtCost');
                        txtCost.setValue(data.fldName);
                        var txtDesc = App.NewCost.queryById('txtDesc');
                        txtDesc.setValue(data.fldDesc);
                        var Id = App.NewCost.queryById('fldId');
                        Id.setValue(data.fldId);
                    }
                    else if (data.Er == 1) {
                        Ext.MessageBox.show({
                            title: data.MsgTitle,
                            msg: data.Msg,
                            icon: Ext.MessageBox.ERROR,
                            buttons: Ext.MessageBox.OK
                        });
                    }
                    App.NewCost.body.mask().hide();
                }
            });
        }
        else {
            App.NewCost.queryById('txtCost').validate();
        }
    }


    function SaveCost() {
        var txtCost = App.NewCost.queryById('txtCost');
        var Id = App.NewCost.queryById('fldId');
        var txtDesc = App.NewCost.queryById('txtDesc');

        var er = false;

        if (txtCost.validate() == false) {
            er = true;
        }
        if (er == true)
            return;
        App.NewCost.body.mask("در حال ذخیره سازی...");
        Ext.net.DirectMethod.request({
            url: '/NewVer/Cost_New/Save',
            params: {
                fldID: Id.getValue(),
                fldName: txtCost.getValue(),
                fldDesc: txtDesc.getValue()
            },
            success: function (data) {
                var ic = Ext.MessageBox.INFO;
                if (data.Er == 1)
                    ic = Ext.MessageBox.ERROR;
                Ext.MessageBox.show({
                    title: data.MsgTitle,
                    msg: data.Msg,
                    icon: ic,
                    buttons: Ext.MessageBox.OK
                });
                if (data.Er != 1) {
                    ClearCost();
                }
                App.NewCost.body.mask().hide();
                App.Cost.queryById('GridCost').store.load();
            }
        });
    }

    function ClearCost() {
        App.NewCost.queryById('txtDesc').setValue("");
        App.NewCost.queryById('txtCost').setValue("");
        App.NewCost.queryById('fldId').setValue(0);
    }

