    }
</style>
@(Html.X().Window()
    .Border(false)
            .ID("UpdateCarFilePic")
       .Listeners(l => l.AfterRender.Handler = "loadUpdateCarFilePic();")
    .Title("ویرایش تصاویر")
    .AutoScroll(true)
    .Closable(true)
    .CloseAction(CloseAction.Destroy)
    .Height(580)
    .Width(580)
    .Layout(Ext.Net.LayoutType.VBox)
    .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Center })
    .Items(
        X.Hidden()
            .ItemID("fldId"),

