                             X.Label("تصویر سند کارخانه:(حداکثر 5MB)"),
                                X.FileUploadField()
                                    .ID("UploadSanad")
                                    .ButtonOnly(true)
                                    .Icon(Icon.Attach)
                                    .ButtonText("انتخاب فایل")
                                    .DirectEvents(l =>
