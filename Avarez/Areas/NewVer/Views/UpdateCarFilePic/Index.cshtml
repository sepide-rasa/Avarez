                            .ID("UploadBargSabz")
                            .ButtonOnly(true)
                            .Icon(Icon.Attach)
                            .ButtonText("انتخاب فایل")
                            .DirectEvents(l =>
                            {
                                l.Change.Action = "UploadBargSabz";
                                l.Change.Success = "hideprogressBargSabz();";
                            })
                                    .Listeners(l => l.Change.Fn = "showFileBargSabz")
