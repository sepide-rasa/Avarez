                    )
                            , X.FieldSet().Border(false)
                    .Defaults(new { Margin = 2 })
                        .LayoutConfig(new TableLayoutConfig { Columns = 3 })
                        .Items(
                            X.Label("تصویر صفحه2 کارت خودرو:(حداکثر 5MB)"),
                                X.FileUploadField()
                                    .ID("UploadCartKhodro_P")
                                    .ButtonOnly(true)
                                    .Icon(Icon.Attach)
                                    .ButtonText("انتخاب فایل")
                                    .DirectEvents(l =>
