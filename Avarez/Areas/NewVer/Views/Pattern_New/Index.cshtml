@model IEnumerable<Avarez.Models.sp_PatternSelect>
@using Ext.Net;
@using Ext.Net.MVC;
@{

    var X = Html.X();
}

@(X.Panel()
        //.Listeners(li => li.AfterRender.Handler = "CityMap();")
            .ID("Pattern")
    .Title("الگوی شماره دهی")
    .Closable(true)
    .Border(false)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Layout(Ext.Net.LayoutType.Fit)
    .Items(
        X.Panel()
                .ItemID("PnlPattern")
            .Border(false)
            .Layout(Ext.Net.LayoutType.Fit)
            .Items(
                X.GridPanel()
                    .AutoScroll(true)
                    .TopBar(
                        Html.X().Toolbar()
                            .Items(
                                X.Button()
                                    .Text("جدید")
                                    .Icon(Ext.Net.Icon.Add)
                                            .Listeners(li => li.Click.Handler = "NewPattern();"),
                                //X.Button()
                                //    .Text("ویرایش")
                                //    .Icon(Ext.Net.Icon.Pencil)
                                //            .Listeners(Li => Li.Click.Handler = "EditPattern();"),
                                X.Button()
                                    .Text("حذف")
                                    .Icon(Ext.Net.Icon.Delete)
                                            .Listeners(de => de.Click.Handler = "DeletePattern();")

                                                 , X.Button()
                                            .Text("راهنما")
                                            .Icon(Ext.Net.Icon.Help)
                                                .Listeners(de => de.Click.Handler = "HelpPattern();")
                                    )
                                    )
                            .ItemID("GridPattern")
                    .BottomBar(X.PagingToolbar())
                    .Store(
                        Html.X().StoreForModel()
                            .Proxy(Html.X().AjaxProxy()
                                .Url(Url.Action("Read"))
                                .Reader(Html.X().JsonReader().Root("data"))
        )
                    .PageSize(20)
                    .RemoteFilter(true)
                    .RemotePaging(true)
                        .Listeners(l => l.DataChanged.Handler = "App.Pattern.queryById('GridPattern').selModel.refresh();")
    )
                    .View(
                        Html.X().GridView().LoadingText("در حال بارگذاری...").RTL(true)
    )
                    .Plugins(X.FilterHeader().Remote(true))
                    .ColumnModel(
                            Html.X().RowNumbererColumn(),
                            Html.X().Column().DataIndex(Model, m => m.fldID).Hidden(true).Text("کد").Flex(1),
                            Html.X().Column().DataIndex(Model, m => m.fldPattern).Text("الگو").Flex(3),
                            Html.X().Column().DataIndex(Model, m => m.fldCountryDivisionName).Text("تقسیمات کشوری").Flex(5) 
    )
                .SelectionModel(
                    Html.X().RowSelectionModel()
                        .Mode(Ext.Net.SelectionMode.Single)
    )

))
)

