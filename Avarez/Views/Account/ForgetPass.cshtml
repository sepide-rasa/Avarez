    <link href="@Url.Content("~/Content/slider/js-image-slider.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/slider/js-image-slider.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/slider/generic.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <table>
        <tr>
            <td style="width: 700px;">
                    <div id="login-box">
                        <div>
                            <center style="padding-right: 50px;padding-top: 25px;">
                                <table dir="rtl" style="color: white; font-size: 12px;">
                                    <tr class="login-box-field">
                                        <td align="left">
                                            نام کاربری:
                                        </td>
                                        <td>
                                            @Html.TextBox("txtUserName", null, new { @dir = "ltr", @style = "width: 100px;height: 18px;" })
                                        </td>
                                    </tr>
                                    <tr class="login-box-field">
                                        <td align="left">
                                            شماره موبایل:
                                        </td>
                                        <td>
                                            @Html.TextBox("txtMobile", null, new { @dir = "ltr", @style = "width: 100px;height: 18px;"})
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <button id="btnSendSMS" style="font-size:11px;font-family:tornado tahoma;width: 80px;text-align: left;background-image: url('/Content/images/yes.png');background-repeat: no-repeat;background-position: 57px;" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button" aria-disabled="false"><span class="ui-button-text">ارسال کد</span></button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" align="center">
                                            <span id="lblError" style="color: tomato;"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            کد:
                                        </td>
                                        <td>
                                            @Html.TextBox("code", null, new { @style = "width: 100px;height: 18px;text-align: center;" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <button id="btnTaiid" style="font-size:11px;font-family:tornado tahoma;width: 80px;text-align: left;background-image: url('/Content/images/yes.png');background-repeat: no-repeat;background-position: 57px;" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button" aria-disabled="false"><span class="ui-button-text">تایید کد</span></button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" align="center">
                                            <span id="lblError2" style="color: Red;"></span>
                                        </td>
                                    </tr>
                                </table>
                                <br />
                            </center>
                        </div>
                    </div>
                    <center><span style="direction:rtl;color:Red;font-weight:bold;" id="Error"></span></center>
                
            </td>
            <td style="vertical-align: top; width: 20px;">
                <div>
                </div>
                <table>
                    <tr>
                        <td style="background: url('/Content/images/PicHeader.png'); background-repeat: no-repeat;
                            border-color: #2E4796; border-radius: 9px 9px 9px 9px; border-style: solid;">
                            <br />
                            <br />
                            <div id="SliderImg">
                                <div id="sliderFrame" dir="rtl">
                                    <div id="slider">
                                        @foreach (var item in picmnu)
                                        {
                                            <img src="@Url.Action("MunImage/" + @item.fldID)" alt='@item.fldName' />
                                        }
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="background: url('/Content/images/NewsHeader.png'); background-repeat: no-repeat;
                            border-color: #2E4796; border-radius: 9px 9px 9px 9px; border-style: solid;">
                            <br />
                            <br />
                            <div id="newsimp" style="position: relative; color: #000; padding-right: 5px;">
                                <marquee height="165" direction="up" scrollamount="1" scrolldelay="50" onmouseover="this.stop()"
                                         onmouseout="this.start();">
                                    <div style="direction: rtl; text-align: right;">
                                        <table style="font-size:12px;" cellpadding="0" cellspacing="0" class="moduletable">
                                            <tr>
                                                <td id="news">
                                                    @foreach (var item in News)
                                                    {
                                                        <span style="font-size:8px;">></span><a href="#" id="@item.fldID" class="NewsDetail">@item.fldSubject </a><br />
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </marquee>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
