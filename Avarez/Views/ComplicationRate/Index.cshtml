                }
                else if (System != 0) {
                    type = 4;
                    code = System;
                    selectedrow = selectedItem.fldCarAccountName + '-->' + selectedItem.fldCarCabinName + '-->' + selectedItem.fldCarSystemName;
                }
                else if (Cabin != 0) {
                    type = 3;
                    code = Cabin;
                    selectedrow = selectedItem.fldCarAccountName + '-->' + selectedItem.fldCarCabinName;
                }
                else if (Account != 0) {
