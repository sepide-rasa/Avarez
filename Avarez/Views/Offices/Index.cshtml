                    columns.Bound(p => p.fldAreaName).Title("ناحیه");
                    columns.Bound(p => p.fldMunicipalityName).Title("شهرداری");
                    columns.Bound(p => p.fldLocalName).Title("منطقه");
                    columns.Bound(p => p.fldDesc).Title("توضیحات");
                })
