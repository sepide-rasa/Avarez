@using Kendo.Mvc.UI;
<link rel="stylesheet" href="@Url.Content("~/Content/web/kendo.common.min.css")" type="text/css">
<link rel="stylesheet" href="@Url.Content("~/Content/web/kendo.rtl.min.css")" type="text/css">
<link rel="stylesheet" href="@Url.Content("~/Content/web/kendo.default.min.css")" type="text/css">
<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kendo.web.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kendo.aspnetmvc.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/console.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/prettify.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/cultures/kendo.culture.fa-IR.min.js")" type="text/javascript"></script>
<div class="treeview-back  k-rtl">
@(Html.Kendo().TreeView()
            .Name("treeview")
            .DataImageUrlField("image")
            .DataTextField("Name")
                .Checkboxes(chkbxs =>
                {
                    chkbxs.Enabled(false).CheckChildren(false);
                })
            .DataSource(dataSource => dataSource
            .Read(read => read
                     .Action("_Tree", "CountryTree")
                      )
                 ).Events(events =>
                     events.Select("select").DataBound("load"))
        )
<script type="text/javascript">
    function select(e) {
        var dataItem = this.dataItem(e.node);
        id = dataItem.id;
        SID = dataItem.fldSid;
        NType = dataItem.fldNodeType;
    }
    function load() {

    }
    var id;
    var SID;
    var NType;
</script>
</div>