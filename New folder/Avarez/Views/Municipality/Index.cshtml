          })
          .Enable(true)
          .AutoBind(false)
          .CascadeFrom("cboCounty")
          .HtmlAttributes(new { @style = "display: none;width:105px;" })
    )
    @(Html.Kendo().DropDownList()
          .Name("cboCity")
          .OptionLabel("نام شهر...")
                  .DataTextField("fldName")
